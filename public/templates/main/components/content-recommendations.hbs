{{#if pages.length}}
	<section class="content-recommendations">
		<h1>{{i18n 'read-more'}}</h1>
		<ul>
			{{#each pages}}
			<li>
				<a href="{{unbound url}}">
					<img src="{{unbound imgUrl}}" class="thumbnail" />
					<span class="title">{{unbound title}}</span>
				</a>
			</li>
			{{/each}}
		</ul>
	</section>
{{/if}}