<div class='sb-close' {{action 'close'}}>{{svg 'close' viewBox='0 0 18 18'}}</div>
<div class='sb-icon' {{bind-attr style=view.iconStyle}}></div>
<div class='sb-info'>
    <div class='sb-title'>{{view.title}}</div>
    <div class='sb-rating'></div>
    <div class='sb-in-store'>{{i18n 'smartbanner-price'}} - {{unbound view.inStore}}</div>
</div>
<a target='_blank' href='{{unbound view.link}}'
   class='sb-button external' {{action 'view'}}><span>{{unbound view.install}}</span></a>
