<li class="list-item" {{action 'toggleSection'}}>
	{{thumbnail section.image_url width=100 height=100 alt=section.title}}{{section.title}}
	{{svg 'chevron' viewBox='0 0 12 7' class='icon chevron'}}
	<div class="section-items">
		<ul>
			{{#each item in section.items}}
				<li class="list-item">
					<a href="{{item.article_local_url}}">
						{{#if item.image_url}}
							{{thumbnail item.image_url width=100 height=100 alt=item.title}}
						{{/if}}
						{{item.label}}
						{{svg 'chevron-linked' viewBox='0 0 20 20'}}
					</a>
				</li>
			{{/each}}
		</ul>
	</div>
</li>