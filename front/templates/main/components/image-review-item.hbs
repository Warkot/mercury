<div class="img-container">
    <img id="{{model.imageId}}" src="{{model.imageId}}" width="230">
</div>
<a href="{{img_href}}" target="_blank" class="internal sprite details magnify" title="Go to image page"></a>
<p> ImageID: {{model.imageId}} </p>
<form>
	<label title="Mark as OK"><input {{action 'setOk'}} type="radio" name="{{model.imageId}}">OK</label>
	<label title="Delete"><input {{action 'setDelete'}} type="radio" name="{{model.imageId}}">Delete</label>
	<label title="Questionable"><input {{action 'setQuestionable'}} type="radio" name="{{model.imageId}}">Questionable</label>
</form>
