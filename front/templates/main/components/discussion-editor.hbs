<div class="editor-container {{if sticky 'sticky'}}">
	<a href="#" class="editor-close" {{action 'deactivateEditorComponent'}}>
		{{svg 'close' viewBox='0 0 18 18'}}
	</a>
	<button type="submit" {{action 'createPost' forumId}} disabled={{submitDisabled}}>Post</button>
	<div class="editor-wrapper">
		<textarea class="editor" oninput={{action 'updateSubmitButton'}} onfocus={{action 'activateEditorComponent'}} placeholder="Share a thought, question or link..."></textarea>
	</div>
	{{! TODO anon avatar }}
	{{user-avatar
		avatarUrl=currentUser.avatarPath
	}}
</div>
