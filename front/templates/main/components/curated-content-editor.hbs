<header class="edit-head curated-content-editor-head">
	{{#link-to 'mainPage' }}
		{{svg 'chevron' role='img' class='icon arrow-left'}}
	{{/link-to}}
	{{!-- @TODO CONCF-956 add translations to Save --}}
	<button {{action 'save'}} class="large publish">Save</button>
	{{!-- @TODO CONCF-956 to Edit Main Page --}}
	<div class="edit-head-title">Edit Main Page</div>
</header>
{{!-- @TODO CONCF-956 add translations to description, title and addItemLabel --}}
{{curated-content-editor-block
	model=model.featured
	block='featured'
	title='Featured Content'
	description='Drag each item into the order you prefer. Tap on the item to reveal configuration options.'
	helpText='app.curated-content-editor-featured-help'
	addItemLabel='+ add new featured content'
	addItem='addBlockItem'
	editItem='editBlockItem'
	showHelp='showHelp'
}}
{{!-- @TODO CONCF-956 add translations to description, title and addItemLabel --}}
{{curated-content-editor-block
	model=model.curated
	block='curated'
	title='Explore the Wiki'
	description='Drag each item into the order you prefer. Tap on the item to reveal configuration options.'
	helpText='app.curated-content-editor-curated-help'
	addItemLabel='+ add new section'
	addItem='addSection'
	openSection='openSection'
	showHelp='showHelp'
}}
{{!-- @TODO CONCF-956 add translations to description, title and addItemLabel --}}
