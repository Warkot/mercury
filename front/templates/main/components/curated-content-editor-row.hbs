<img src="{{thumbUrl}}" {{action 'edit'}}/>
<div class="item-description" {{action 'edit'}}>
	<div class="title">{{model.label}}</div>
	{{#if model.items}}
		<div class="subtitle">{{i18n 'app.curated-content-editor-items-count' count=model.items.length}}</div>
	{{/if}}
</div>
<div class="navigation">
	<div {{action 'moveBy' -1 bubbles=false}}>
		{{svg 'chevron' role='img' class='icon arrow arrow-up pointer-events-none'}}
	</div>
	<div {{action 'moveBy' 1 bubbles=false}}>
		{{svg 'chevron' role='img' class='icon arrow arrow-down pointer-events-none'}}
	</div>
</div>
