{{#if curatedContent}}
	<div class="curated-content">
		<nav class="grid-sections">
			{{#each section in curatedContent.sections}}
				<div {{action "showItems" section.title}}>
					{{curated-content-item label=section.title url=section.image_url}}
				</div>
			{{/each}}
		</nav>
		<nav class="list-items">
			<div {{action "showGrid"}}>BACK</div>
			{{#each item in model.activeSectionItems}}
				{{curated-content-item label=item.label url=item.image_url}}
			{{/each}}
		</nav>
	</div>
{{/if}}
