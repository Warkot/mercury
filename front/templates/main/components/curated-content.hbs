{{#if model}}
	<nav class='curated-content-items'>
		{{#each model as |item|}}
			{{curated-content-item model=item action='clickItem'}}
		{{/each}}

	{{! the empty newline above lets the last inline item to be justified to the right if it's even }}
	</nav>
	{{#if offset}}
		<button {{action "loadMore"}}>
			Load More
		</button>
	{{/if}}
{{/if}}
{{loading-spinner active=isLoading}}
