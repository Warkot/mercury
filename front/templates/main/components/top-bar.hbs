{{svg 'wikia-logo' role='img' class='icon wikia-logo logo-image'}}

<user-status
	{{! "needsclick" class on the user-status element disables FastClick, which doesn't play well with shadow dom}}
	class="user-status needsclick"
	anon-avatar-src="http://wikia.github.io/style-guide/assets/images/icons/icon_avatar.svg"
	anon-avatar-href="/join"
	user-logged-in={{isUserLoggedIn}}
	user-avatar-src="{{currentUser.avatarPath}}"
	user-name="{{currentUser.name}}">
	{{#unless isUserLoggedIn}}
		<span class="register-cta-text">
			<a href="/join">{{i18n 'topBar.anon-cta'}}</a>
		</span>
	{{/unless}}
	{{#each links as |link|}}
		<li>
			<a href="{{unbound link.href}}" class="external">{{i18n 'app' link.textKey}}</a>
		</li>
	{{/each}}
</user-status>
