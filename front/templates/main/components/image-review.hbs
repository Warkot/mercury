{{#if model.showSubHeader}}
    <header class="sub-head">
        <a {{action 'openMainPage'}} class="sub-head--cancel">{{svg 'back-arrow' role='img' class='icon'}}</a>
        <button {{action (action this.attrs.reviewAndGetMoreImages)}} class="sub-head--done">{{i18n 'app.image-review-and-get-more'}}</button>
        <div class="sub-head--title">{{i18n 'app.image-review-head' label=(i18n 'app.curated-content-editor-main-page')}}</div>
    </header>
{{/if}}

<p>{{i18n 'app.image-review-description'}}</p>

<ul class="image-review-list">
	{{#each model.images as |item|}}
		<li class="image-review-item">
			{{image-review-item model=item showModal=(action 'showModal')
				changeItemModel=(action (action this.attrs.changeItemModel))}}
		</li>
	{{/each}}
</ul>

{{#modal-dialog isVisible=isModalVisible}}
	<img src="{{modalImageUrl}}"/>
{{/modal-dialog}}

<div class="action-buttons">
    <button {{action (action this.attrs.reviewAndGetMoreImages)}}>{{i18n 'app.image-review-and-get-more'}}</button>
    <button {{action (action this.attrs.getFlaggedOnly)}}>{{i18n 'app.image-review-get-flagged'}}</button>
</div>

{{alert-notifications alerts=alertNotifications}}
