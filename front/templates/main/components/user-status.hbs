{{#if userLoggedIn}}
	{{#each userMenuLinks as |link|}}
		<li>
			<a href="{{unbound link.href}}" class="external">{{i18n 'app' link.textKey}}</a>
		</li>
	{{/each}}
{{else}}
	<span class="show-for-large-up">
		{{{i18n 'userStatus.anon-cta'
			loginLink=loginLink
			registerLink=registerLink
		}}}
	</span>
	<figure class="show-for-medium-down">
		<a href="{{anonAvatarHref}}">
			<img src="{{anonAvatarSrc}}">
		</a>
	</figure>
{{/if}}
