{{discussion-post-editor
	create='create'
	isActive=editorActive
	posts=posts
	setSortBy=setSortBy
	requestErrorMessage=requestErrorMessage
	siteHeadPinned=siteHeadPinned
	isRequesterBlocked=isRequesterBlocked
}}
{{#each posts as |item|}}
	{{post-detail
		goToPost='goToPost'
		upvote='upvote'
		author=item.createdBy
		isDeleted=item.isDeleted
		isVisible=item._embedded.firstPost.[0].isVisible
		post=item._embedded.firstPost.[0]
		postId=item.id
		replyCount=item.postCount
	}}
{{/each}}
{{#if hasMore}}
	{{#if isLoading }}
		{{loading-spinner
			active=true
			overlay=false
			radius=32
			strokeWidth=2
		}}
	{{/if}}
	<div class="load-more">
		{{i18n 'main.loading-more-posts' ns='discussion'}}
	</div>
{{/if}}
