<div class="discussion forum">
	{{#each posts as |item|}}
		{{post-detail
		action='goToPost'
		goToPost='goToPost'
		upvote='upvote'
		post=item._embedded.firstPost.[0]
		replyCount=item.postCount
		}}
	{{/each}}
	{{#if loadingMore}}
        <div class="load-more">Loading More Posts</div>
	{{/if}}
</div>

