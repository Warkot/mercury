<header>{{title}}</header>
{{#if description}}
	<div class="block-description">{{description}}</div>
{{/if}}
<div class="curated-content-edit-block-items">
	{{#each model.items as |item|}}
		{{curated-content-edit-block-item
			model=item
			block=block
			editItem='editItem'
			openSection='openSection'
		}}
	{{/each}}
	<div class="curated-content-edit-item">
		<button {{action 'addItem'}} class="curated-content-edit-add-item-btn">+ {{addItemLabel}}</button>
	</div>
</div>
