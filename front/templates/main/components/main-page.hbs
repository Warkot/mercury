<div class="wiki-container">
	{{#unless isRoot}}
		<h2 class="wiki-title">{{#link-to 'article' mainPageTitle action='trackClick' actionParam='wikiname' alt=siteName}}{{siteName}}{{/link-to}}</h2>
	{{/unless}}
	<h1 class="article-title">
		{{title}}
		{{#if curatedContentToolButtonVisible}}
			<div>
				{{#link-to 'curatedContentEditor' bubbles=false class="main-page-edit"}}
					{{svg 'pen' role='img' class='icon pencil'}}
					{{i18n 'app.curated-content-edit-main-page'}}
				{{/link-to}}
			</div>
		{{/if}}
	</h1>
	{{#if wikiaStats}}
		{{wikia-stats model=wikiaStats}}
	{{/if}}
	{{#if featuredContent}}
		{{component featuredContentComponentVariation model=featuredContent}}
	{{/if}}
	{{#if curatedContent}}
		{{curated-content model=curatedContent openCuratedContentItem='openCuratedContentItem'}}
	{{/if}}
	{{#if trendingArticles}}
		{{trending-articles model=trendingArticles}}
	{{/if}}
	{{#if trendingVideos}}
		{{trending-videos model=trendingVideos openLightbox='openLightbox'}}
	{{/if}}

	{{wikia-footer}}
</div>
