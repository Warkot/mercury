<div class="lightbox-header {{if view.headerHidden 'hidden'}}">
	<div class="lightbox-close-wrapper" {{action 'closeLightbox'}}>
		<svg role="img" class="lightbox-close-button">
			<use xlink:href="#close"></use>
		</svg>
	</div>
	<div class="lightbox-header-title">{{header}}</div>
</div>
<div class="lightbox-content">
{{#if currentMedia}}
	{{component lightboxComponent currentMedia=currentMedia isGallery=isGallery}}
{{else}}
	{{yield}}
{{/if}}
</div>
{{#if footer}}
	<div class="lightbox-footer {{view.lightboxFooterExpanded}} {{if view.footerHidden 'hidden'}}">{{footer}}</div>
{{/if}}
