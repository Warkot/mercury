{{#if editorPreview}}
	<div class="page-wrapper editor-preview" lang={{language.content}} dir={{language.contentDir}}>
		<section class='wiki-container'>
			{{outlet}}
		</section>
	</div>
{{else if fullPage}}
	{{outlet}}
{{else}}
	{{smart-banner isVisible=view.smartBannerVisible}}
	{{site-head
		smartBannerVisible=view.smartBannerVisible
		sideNavCollapsed=view.sideNavCollapsed
		userMenuCollapsed=view.userMenuCollapsed
		currentUser=currentUser
	}}
	{{share-feature smartBannerVisible=view.smartBannerVisible title=currentTitle language=language}}
	{{side-nav isCollapsed=view.sideNavCollapsed loadRandomArticle='loadRandomArticle'}}
	{{#if currentUser.isAuthenticated}}
		{{user-menu isCollapsed=view.userMenuCollapsed userName=currentUser.model.name}}
	{{/if}}
	{{ad-slot name='INVISIBLE_HIGH_IMPACT' noAds=noAds}}
	{{ad-slot name='MOBILE_TOP_LEADERBOARD' noAds=noAds}}
	<div class='page-wrapper' lang={{language.content}} dir={{language.contentDir}}>
		<section class='wiki-container'>
			{{outlet}}
		</section>
	</div>
	{{lightbox-wrapper
		type=lightboxType
		model=lightboxModel
		closeLightbox='closeLightbox'
		setQueryParam='setQueryParam'
	}}
{{/if}}
{{alert-notifications alerts=view.alertNotifications}}
{{loading-spinner active=isLoading}}
