{{#if editorPreview}}
	<div class="page-wrapper editor-preview" lang={{language.content}} dir={{language.contentDir}}>
		<section class='wiki-container'>
			{{outlet}}
		</section>
	</div>
{{else if fullPage}}
	{{outlet}}
{{else}}
	{{smart-banner
		isVisible=smartBannerVisible
		toggleVisibility='toggleSmartBanner'
	}}

	{{#if useNewNav}}
		{{top-bar}}
	{{else}}
		{{site-head
			smartBannerVisible=smartBannerVisible
			toggleSideNav='toggleSideNav'
			toggleUserMenu='toggleUserMenu'
			themeBar=themeBar
		}}
	{{/if}}

	{{#if enableShareHeader}}
		{{share-header
			smartBannerVisible=smartBannerVisible
			title=currentTitle
			language=language
		}}
	{{/if}}
	{{side-nav
		shouldBeVisible=sideNavVisible
		loadRandomArticle='loadRandomArticle'
		toggleVisibility='toggleSideNav'
	}}
	{{user-menu
		shouldBeVisible=userMenuVisible
		toggleVisibility='toggleUserMenu'
	}}
	<div class='page-wrapper' lang={{language.content}} dir={{language.contentDir}}>
		{{outlet}}
	</div>
	{{lightbox-wrapper
		type=lightboxType
		model=lightboxModel
		isVisible=lightboxVisible
		closeLightbox='closeLightbox'
		setQueryParam='setQueryParam'
	}}
{{/if}}
{{wikia-in-your-lang}}
{{alert-notifications alerts=alertNotifications}}
{{loading-spinner active=isLoading}}
