<div class="infobox-builder">
	{{#infobox-builder-wrapper}}
		{{#each model.infoboxState as |element index|}}
			{{component element.infoboxBuilderData.component
				item=element
				position=index
				activeItemPosition=model.itemInEditModePosition
				setEditItemAction='setEditItem'
			}}
		{{/each}}
	{{/infobox-builder-wrapper}}

	<div class="infobox-builder-buttons">
		<button {{action 'addItem' 'data'}}>{{i18n 'app.add-infobox-data-tag'}}</button>
		<button {{action 'addItem' 'title'}}>{{i18n 'app.add-infobox-title-tag'}}</button>
		<button {{action 'addItem' 'image'}}>{{i18n 'app.add-infobox-image-tag'}}</button>
		<button {{action 'saveTemplate'}}>{{i18n 'app.save-infobox-template'}}</button>
		<button {{action 'cancel'}}>{{i18n 'app.cancel-label'}}</button>
	</div>

	{{infobox-builder-edit-item
		item=model.itemInEditMode
		position=model.itemInEditModePosition
		removeItemAction='removeItem'
	}}
</div>

