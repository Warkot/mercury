<div class="discussion-post">
	{{post-detail
		authorId=model.firstPost.creatorId
		content=model.firstPost.rawContent
		timestamp=model.firstPost.creationDate.epochSecond
		upvoteCount=model.upvoteCount
		replyCount=model.postCount
	}}
	{{#if showMore}}
        <button {{action 'expand'}} style="width: 100%" class="see-more">
			{{svg 'comments' viewBox='0 0 30 30' class='icon replies'}}
            View Older Replies
        </button>
	{{/if}}
	{{#each model.replies as |item index|}}
		{{post-reply
			authorId=item.creatorId
			content=item.rawContent
			timestamp=item.creationDate.epochSecond
			upvoteCount=item.upvoteCount
			created=model.firstPost.creationDate.epochSecond
			timeDiff=item.timeDiff
		}}
		<hr/>
	{{/each}}
</div>
