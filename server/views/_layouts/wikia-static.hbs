<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1, minimal-ui">

		<title>{{i18n title}}</title>
		<!-- build:css /front/styles/auth/app.css -->
		<link rel="stylesheet" href="/front/styles/auth/app.css">
		<!-- endbuild -->
	</head>
	<body class="auth {{bodyClasses}}">
		{{#if exitTo}}
		<a class="close" href="{{exitTo}}"></a>
		{{/if}}

		{{#if header}}
		<header class="auth-header splash splash-top">{{i18n header i18nContext}}</header>
		{{/if}}

		{{{content}}}

		{{#if footer}}
		<footer class="auth-footer splash splash-bottom">
			{{{i18n footer i18nContext}}}
		</footer>
		{{/if}}

		{{#unless noScripts}}
		<!-- build:js /front/scripts/auth.js -->
		<script src="/front/scripts/auth.js"></script>
		<!-- endbuild -->
		{{/unless}}
	</body>
</html>
