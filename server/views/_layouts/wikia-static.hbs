<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">

		<title>{{{title}}}</title>
		<link rel="stylesheet" href="/front/styles/auth/app.css">
	</head>
	<body class="auth {{bodyClasses}}">
		{{#if exitTo}}
		<a class="close" href="{{exitTo}}"></a>
		{{/if}}

		{{#unless hideHeader }}
		{{!-- TODO: use i18n for messages once it's set up (SOC-526) --}}
		<header class="auth-header splash splash-top">Welcome Back!</header>
		{{/unless}}

		{{{content}}}

		{{#unless hideFooter }}
		<footer class="auth-footer splash splash-bottom">Don\'t have an account? <a href="#">Register now</a></footer>
		{{/unless}}
        {{#if loadScripts}}
        <script src="/front/scripts/auth.js"></script>
        {{/if}}
    </body>
</html>
