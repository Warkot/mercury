<section class="auth-content">
	<form id="signupForm" action="{{heliosRegistrationURL}}" method="POST">
		<div class="input-container">
			<input type="email" name="email" id="signupEmail" required />
			<label class="floating-label" for="signupEmail">{{i18n "auth:signup.email-label"}}</label>
		</div>
		<div class="input-container">
			<input type="text" name="username" id="signupUsername" maxlength="50" required />
			<label class="floating-label" for="signupUsername">{{i18n "auth:common.username-label"}}</label>
			<span class="input-icon dice"></span>
	</div>
		<div class="input-container">
			<input type="password" name="password" id="signupPassword" autocomplete="off" required />
			<label class="floating-label" for="signupPassword">{{i18n "auth:common.password-label"}}</label>
			<span class="input-icon password-toggler"></span>
		</div>
		<div class="input-container">
			<input type="date" name="birthdate" id="signupBirthDate" required />
			<label class="floating-label" for="signupBirthDate">Birthdate (MM / DD / YY)</label>
		</div>
		<label for="signupNewsletter" class="inline signup-newsletter-label">
			<input type="checkbox" name="newsletter" id="signupNewsletter" class="inline">
			{{i18n "auth:signup.wikia-newsletter-prompt"}}
		</label>
		<button id="signupSubmit" type="submit" disabled><span>{{i18n "auth:signup.register-action"}}</span></button>
		<small class="terms-of-use">
			{{i18n "auth:signup.terms-of-use-text"}}
			<a href="{{{termsOfUseLink}}}" target="_blank">
				{{i18n "auth:signup.terms-of-use-link"}}
			</a>
		</small>
	</form>
</section>
