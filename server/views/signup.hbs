<section class="auth-content">
	<form id="signupForm" action="" method="POST">
		<div class="input-container">
			<input type="email" name="email" id="signupEmail" required />
			<label class="floating-label" for="signupEmail">{{i18n "auth:signup.email-label"}}</label>
		</div>
		<div class="input-container">
			<input type="text" name="username" id="signupUsername" required />
			<label class="floating-label" for="signupUsername">{{i18n "auth:common.username-label"}}</label>
			<img class="dice" src="/front/images/dice.svg">
	</div>
		<div class="input-container">
			<input type="text" name="password" id="signupPassword" required />
			<label class="floating-label" for="signupPassword">{{i18n "auth:common.password-label"}}</label>
			<img class="password-toggler" src="/front/images/eye.svg">
		</div>
		<div class="input-container">
			<div class="birthdate-container input hide">
				{{#birthdateInputs}}
					<input type="number" name="{{name}}" class="birth-{{name}}" data-max-length="{{maxLength}}" max="{{max}}" placeholder="{{placeholder}}" required>
					<span>{{separator}}</span>
				{{/birthdateInputs}}
			</div>
			<input type="text" name="birthdate" id="signupBirthDate" required>
			<label class="floating-label" for="signupBirthDate">{{i18n "auth:signup.birthdate-label"}}</label>
		</div>
		<input type="hidden" name="crumb" id="crumb" value="{{crumb}}" />
		<label for="signupNewsletter" class="inline">
			<input type="checkbox" name="newsletter" id="signupNewsletter" class="inline">
			{{i18n "auth:signup.wikia-newsletter-prompt"}}
		</label>
		<button id="signupSubmit" type="submit" disabled>{{i18n "auth:signup.register-action"}}</button>
		<small class="terms-of-use">
			{{i18n "auth:signup.terms-of-use-text"}}
			<a href="{{{termsOfUseLink}}}" target="_blank">
				{{i18n "auth:signup.terms-of-use-link"}}
			</a>
		</small>
	</form>
</section>
