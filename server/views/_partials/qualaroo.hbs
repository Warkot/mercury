{{#if qualarooScript}}
	<script>
		// qualaroo configuration
		var _kiq = [],
			qualarooConfig = {};
		
		// recommended-by-Qualaroo way of loading their script
		(function(){
			setTimeout(function(){
				var d = document, f = d.getElementsByTagName('script')[0], s = d.createElement('script');
				s.type = 'text/javascript'; s.async = true; s.src = '{{qualarooScript}}'; f.parentNode.insertBefore(s, f);
			}, 1);
		})();

		// user identity
		// TODO when we'll support user login on mercury
		// if (user_id) {
		// 	_kiq.push(['identify', user_id]);
		// }

		// send some variables to qualaroo so we can target our audience
		if (typeof optimizely === "object") {
			Object.keys(optimizely.variationMap).forEach(function (key) {
				qualarooConfig['optimizely_' + key] = optimizely.variationMap[key];
			});
		}

		// send all configuration
		_kiq.push(['set', qualarooConfig]);
	</script>
{{/if}}
